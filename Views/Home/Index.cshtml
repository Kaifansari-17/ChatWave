<div class="chat-container">

    <div class="chat-header">
        SignalR Chat
        <small id="status">Offline</small>
    </div>

    <div style="padding:8px;">
        <input id="displayname" placeholder="Your name" />
        <input id="recipientname" placeholder="Recipient name" />
        <button onclick="connect()">Connect</button>
    </div>

    <div class="chat-box" id="discussion"></div>

    <div class="typing" id="typing"></div>

    <div class="chat-input">
        <input id="message" placeholder="Type a message…" />
        <button id="sendmessage">➤</button>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.14/dist/browser/signalr.min.js"></script>

<script>
    let connection;
    let currentUser;
    let typingTimer;

    function connect() {
        currentUser = displayname.value.trim();

        connection = new signalR.HubConnectionBuilder()
            .withUrl("/chat?user=" + currentUser)
            .build();

        connection.start().then(() => {
            status.innerText = "Online 🟢";
        });

        connection.on("ReceiveMessage", (user, message) => {
            addMessage(user, message, false);
            connection.invoke("MessageSeen", user);
        });

        connection.on("MessageSeenAck", () => {
            const ticks = document.querySelectorAll(".sent .tick");
            if (ticks.length) ticks[ticks.length - 1].innerText = "✔✔";
        });

        connection.on("ShowTyping", user => {
            typing.innerText = user + " is typing...";
        });

        connection.on("HideTyping", () => typing.innerText = "");

        connection.on("UserOnline", () => status.innerText = "Online 🟢");
        connection.on("UserOffline", () => status.innerText = "Offline ⚪");
    }

    function addMessage(user, message, sent) {
        const div = document.createElement("div");
        div.className = "msg " + (sent ? "sent" : "received");

        const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        div.innerHTML = `
            ${message}
            <div class="meta">${time} ${sent ? '<span class="tick">✔</span>' : ''}</div>
        `;
        discussion.appendChild(div);
        discussion.scrollTop = discussion.scrollHeight;
    }

    sendmessage.onclick = () => {
        const msg = message.value.trim();
        const to = recipientname.value.trim();

        if (!msg || !to) return;

        connection.invoke("SendMessageToUser", to, msg);
        addMessage(currentUser, msg, true);
        message.value = "";
    };

    message.oninput = () => {
        connection.invoke("Typing", recipientname.value);
        clearTimeout(typingTimer);
        typingTimer = setTimeout(() =>
            connection.invoke("StopTyping", recipientname.value), 800);
    };
</script>
